{
    "name": "erdmannfreunde/optimist-theme-bundle",
    "description": "OPTIMIST Theme Bundle",
    "homepage": "https://erdmann-freunde.de/produkte/contao-themes/optimist/",
    "keywords":["contao", "erdmannfreunde", "optimist", "theme"],
    "type": "composer-plugin",
    "license": "LGPL-3.0-or-later",
    "version": "2.0.0",
    "authors":[
        {
            "name": "Erdmann & Freunde",
            "homepage": "https://erdmann-freunde.de"
        }
    ],
    "support": {
        "homepage": "https://erdmann-freunde.de"
    },
    "require": {
        "php": ">=7.1",
        "composer-plugin-api": "^2.0",
        "contao/manager-bundle": "^4.9",
        "nutshell-framework/nutshell": "2.x-dev",
        "erdmannfreunde/contao-grid-bundle": "^1.0",
        "erdmannfreunde/theme-toolbox": "^2.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.7",
        "composer/composer": "^2.0",
        "contao/easy-coding-standard": "^4.0"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >= 3.0"
    },
    "autoload": {
        "psr-4": {
            "ErdmannFreunde\\OptimistTheme\\": "src/"
        }
    },
    "extra": {
        "class": "ErdmannFreunde\\OptimistTheme\\Composer\\Plugin",
        "contao-manager-plugin": "ErdmannFreunde\\OptimistTheme\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "contao-community-alliance/composer-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
